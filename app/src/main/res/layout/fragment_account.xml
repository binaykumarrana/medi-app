<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background"
                android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:id="@+id/profileCardView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="@dimen/margin_eight"
        android:elevation="@dimen/cardview_default_elevation"
        app:cardCornerRadius="@dimen/cardview_default_radius">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_eight"
                android:text="ABC....."
                android:textColor="@android:color/black"
                android:textSize="17sp"/>

            <TextView
                android:id="@+id/userAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/userName"
                android:padding="@dimen/margin_eight"
                android:text="ABC....."
                android:textColor="@color/black_75_percent"
                android:textSize="15sp"/>

            <ImageButton
                android:id="@+id/profileNavigate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_eight"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_arrow"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/sosCardView"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/profileCardView"
        android:layout_margin="@dimen/margin_eight"
        android:elevation="@dimen/cardview_default_elevation"
        app:cardCornerRadius="@dimen/cardview_default_radius">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/newMedicine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:padding="@dimen/margin_eight"
                android:text="Add New Medicine"
                android:textColor="@android:color/black"
                android:textSize="17sp"/>

            <ImageButton
                android:id="@+id/newMedicineNavigate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_eight"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_arrow"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/addCardView"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/sosCardView"
        android:layout_margin="@dimen/margin_eight"
        android:elevation="@dimen/cardview_default_elevation"
        app:cardCornerRadius="@dimen/cardview_default_radius">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/sosName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:padding="@dimen/margin_eight"
                android:text="SOS Details"
                android:textColor="@android:color/black"
                android:textSize="17sp"/>

            <ImageButton
                android:id="@+id/sosNavigate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_eight"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_arrow"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>